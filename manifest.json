{
  "manifest_version": 2,

  "name": "Slacky - Memes as a Service",
  "description": "Create all the memes directly from your browser",
  "version": "1.0",
  "browser_action": {
    "default_icon": "slacky-64.png",
    "default_popup": "slacky-panel.html"
  },
  "background": {
    "scripts": ["index.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "utils.js", "window.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}